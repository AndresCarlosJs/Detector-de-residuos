# Configuración de PostgreSQL (requerido)
DB_USER=postgres
DB_PASSWORD=tu_contraseña_postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=residuos_db

# Configuración del Modelo
MODEL_PATH=
MODEL_CONFIDENCE=0.3

# Configuración de Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Configuración de Cámara
CAMERA_RESOLUTION=640,480
CAMERA_FPS=30
CAMERA_BUFFER=1
# Separados por comas, el orden determina la preferencia
CAMERA_BACKENDS=DirectShow,MediaFoundation,Default

# Configuración de Flask
SECRET_KEY=  # Dejar vacío para generar automáticamente